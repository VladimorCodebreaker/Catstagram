@model Post

@{
    ViewData["Title"] = "🥑Details Post🥑";
}

<div class="row m-b m-t">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-sea">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.Name
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.Image" width="100%" alt="@Model.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.Comment</p>
                        <p class="card-text">@Model.DateAdded</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                Back to List
                            </a>
                            <a class="btn btn-success text-white like-button">Like ❤️</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>$(document).ready(function () {
            $('.like-button').click(function () {
                // Create the flying heart element
                var heart = $('<i class="bi bi-heart-fill" style="position: absolute; font-size: 3rem; color: #e74c3c; transform: scale(0.5);"></i>');

                // Add the heart element to the body
                $('body').append(heart);

                // Calculate the position of the heart element
                var button = $(this);
                var buttonPos = button.offset();
                var buttonWidth = button.outerWidth();
                var buttonHeight = button.outerHeight();
                var heartPos = {
                    top: buttonPos.top + buttonHeight / 2,
                    left: buttonPos.left + buttonWidth / 2
                };

                // Animate the heart element
                heart.css(heartPos);
                heart.animate({
                    top: '-=150',
                    left: '-=75',
                    opacity: 0,
                    transform: 'scale(2) rotateZ(45deg)'
                }, 1000, function () {
                    // Remove the heart element when the animation is done
                    heart.remove();
                });
            });
        });</script>
}
